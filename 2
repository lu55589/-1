<script>
  // ğŸŒ¸ çˆ±å¿ƒé£˜è½
  function createHeart() {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.animationDuration = 3 + Math.random() * 2 + "s";
    heart.style.background = "rgb(" +
      (255 - Math.random() * 50) + "," +
      (100 + Math.random() * 80) + "," +
      (150 + Math.random() * 100) + ")";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 5000);
  }
  setInterval(createHeart, 150);

  // ğŸ’Œ ç”œèœœè¯è¯­
  const messages = [
    "é‡è§ä½ æ˜¯æˆ‘æœ€ç¾çš„æ„å¤– ğŸ’•",
    "ä½ ç¬‘çš„æ—¶å€™ï¼Œæ•´ä¸ªä¸–ç•Œéƒ½äº®äº† âœ¨",
    "æˆ‘æƒ³å’Œä½ ä¸€èµ·çœ‹æ˜Ÿæ˜Ÿã€æ•°æœˆäº® ğŸŒ™",
    "æœ‰ä½ åœ¨çš„æ—¥å­ï¼Œè¿é£éƒ½æ˜¯ç”œçš„ ğŸ¬",
    "æˆ‘çš„å¿ƒè·³å› ä¸ºä½ è€ŒåŠ é€Ÿ â¤ï¸",
    "ä¸–ç•Œä¸Šæœ€å¹¸ç¦çš„äº‹ï¼Œå°±æ˜¯å–œæ¬¢çš„äººä¹Ÿå–œæ¬¢æˆ‘ ğŸ’",
  ];

  function showPopup() {
    const msg = messages[Math.floor(Math.random() * messages.length)];
    const div = document.createElement("div");
    div.className = "popup";
    div.textContent = msg;
    div.style.top = Math.random() * 70 + "%";
    div.style.left = Math.random() * 70 + "%";
    document.body.appendChild(div);
    setTimeout(() => div.remove(), 6000);
  }
  setInterval(showPopup, 4000);
</script>

